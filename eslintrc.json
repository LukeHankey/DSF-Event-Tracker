{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "eqeqeq": "error",
    "no-debugger": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "double", { "avoidEscape": true }],
    "no-unused-vars": "warn"
  },
  "ignorePatterns": ["*.config.js"]
}
