{
    "compilerOptions": {
        "resolvePackageJsonExports": true,
        "moduleResolution": "bundler",
        "module": "ESNext",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "target": "ES2017",
        "downlevelIteration": true
    }
}
